<%= form_with model: customer do |form| %>
<div class="card container" >
  <div class="card-body" >
     <div class="mb-3" >
        <%= form.label :first_name, {class: "form-label"} %><br>
        <%= form.text_field :first_name, {class: "form-control", placeholder: "first name"}  %>
        <% customer.errors.full_messages_for(:first_name).each do |message| %>
          <div><%= message %></div>
        <% end %>
     </div>
     <div class="mb-3" >
        <%= form.label :last_name, {class: "form-label"} %><br>
        <%= form.text_field :last_name, {class: "form-control", placeholder: "last name"}  %>
        <% customer.errors.full_messages_for(:last_name).each do |message| %>
          <div><%= message %></div>
        <% end %>
     </div>
      <div class="mb-3" >
         <%= form.label :email, {class: "form-label"} %><br>
         <%= form.email_field :email, {class: "form-control", placeholder: "email"}  %>
         <% customer.errors.full_messages_for(:email).each do |message| %>
         <div><%= message %></div>
         <% end %>
      </div>
      <div class="mb-3" >
        <%= form.label :phone_number, {class: "form-label"} %><br>
        <%= form.number_field :phone_number, {class: "form-control", placeholder: "phone number"}  %>
        <% customer.errors.full_messages_for(:phone_number).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
      <div>
         <%= form.submit %>
      </div>
   </div>
</div>
<% end %>